<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/VLBlue"
    tools:context=".ui.fragments.SortFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sorting_folders"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_style_for_background_hard"
        android:backgroundTint="@color/AllWhite"
        app:layout_constraintBottom_toTopOf="@id/soring_queue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.94" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/soring_queue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.94"
        android:background="@drawable/round_style_for_background_hard"
        android:backgroundTint="@color/AllWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/sorting_folders" />



</androidx.constraintlayout.widget.ConstraintLayout>