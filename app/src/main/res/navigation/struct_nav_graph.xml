<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/struct_nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/foldersFragment"
        android:name="ru.mirea.structf.ui.fragments.FoldersFragment"
        android:label="fragment_folders"
        tools:layout="@layout/fragment_folders" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="ru.mirea.structf.ui.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_tagFragment"
            app:destination="@id/tagFragment"
            app:enterAnim="@anim/slide_right_from_left"
            app:exitAnim="@anim/slide_left_from_right"
            app:popEnterAnim="@anim/slide_right_from_left"
            app:popExitAnim="@anim/slide_left_from_right"/>
        <action
            android:id="@+id/action_mainFragment_to_foldersFragment"
            app:destination="@id/foldersFragment" />
        <action
            android:id="@+id/action_mainFragment_to_sortFragment"
            app:destination="@id/sortFragment" />
    </fragment>
    <fragment
        android:id="@+id/sortFragment"
        android:name="ru.mirea.structf.ui.fragments.SortFragment"
        android:label="fragment_sort"
        tools:layout="@layout/fragment_sort" />
    <fragment
        android:id="@+id/tagFragment"
        android:name="ru.mirea.structf.ui.fragments.TagFragment"
        android:label="fragment_tag"
        tools:layout="@layout/fragment_tag" >
        <action
            android:id="@+id/action_tagFragment_to_foldersFragment"
            app:destination="@id/foldersFragment" />
        <action
            android:id="@+id/action_tagFragment_to_sortFragment"
            app:destination="@id/sortFragment" />
    </fragment>
</navigation>